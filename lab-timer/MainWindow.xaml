<Window x:Class="lab_timer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:lab_timer"
        mc:Ignorable="d"
        Title="Timer" Height="560" Width="960" ResizeMode="NoResize">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition Width="230"/>
            <ColumnDefinition Width="230"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="70"/>
            <RowDefinition Height="220"/>
            <RowDefinition Height="210"/>
            <RowDefinition Height="20"/>
        </Grid.RowDefinitions>

        <Grid Name="LocalTime" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2">

        </Grid>
        <Grid Name="Countdown" Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2">

        </Grid>
        <Grid Name="Buttons" Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2">
            <Button x:Name="add" Content="" HorizontalAlignment="Left" Height="55" Margin="110,35,0,0" VerticalAlignment="Top" Width="380"/>
            <Button x:Name="change" Content="" HorizontalAlignment="Left" Height="44" Margin="110,95,0,0" VerticalAlignment="Top" Width="380"/>
            <Button x:Name="remove" Content="" HorizontalAlignment="Left" Height="44" Margin="110,144,0,0" VerticalAlignment="Top" Width="380"/>
        </Grid>
        <Grid Name="Headline" Grid.Row="0" Grid.Column="2" Grid.ColumnSpan="2">

        </Grid>
        <Grid Name="Timers" Grid.Row="1" Grid.RowSpan="2" Grid.Column="2" Grid.ColumnSpan="2">

        </Grid>
    </Grid>
</Window>
